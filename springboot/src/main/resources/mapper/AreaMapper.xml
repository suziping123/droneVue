<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.AreaMapper">

<!--    <select id="selectAll" resultType="com.example.entity.Area">-->
<!--        select * from area-->
<!--    </select>-->
    <select id="findAllProvinces" resultType="com.example.entity.Area">
        SELECT DISTINCT profence FROM area
    </select>
    <select id="findCitiesByProvince" resultType="com.example.entity.Area">
        SELECT DISTINCT city FROM area WHERE profence = #{province}
    </select>
    <select id="findDistrictsByCity" resultType="com.example.entity.Area">
        SELECT DISTINCT districts FROM area WHERE city = #{city}
    </select>

</mapper>